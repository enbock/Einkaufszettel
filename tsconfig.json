{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "target": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@enbock/ts-jsx",
    "outDir": "./build/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**.test.ts",
    "**.test.tsx"
  ]
}
